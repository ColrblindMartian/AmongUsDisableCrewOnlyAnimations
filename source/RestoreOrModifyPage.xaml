<Page x:Class="AmongUsHardcorePatch.RestoreOrModifyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AmongUsHardcorePatch"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RestoreOrModifyPage">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
        <TextBlock Text="Mod is already installed.&#10;Select how to proceed:" TextWrapping="WrapWithOverflow" FontSize="18" Margin="10"/>
        <ComboBox FontSize="18" Height="30" Width="200" Margin="10" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem IsSelected="True">Remove Mod</ComboBoxItem>
            <ComboBoxItem>Modify Mod</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Page>
